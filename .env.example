# Golf Modeling Suite - Environment Configuration
# Copy this file to .env and customize for your environment
# SECURITY: Never commit your actual .env file to version control!

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database connection URL
# SQLite (development): sqlite:///./golf_modeling_suite.db
# PostgreSQL: postgresql://user:password@localhost:5432/golf_suite
DATABASE_URL=sqlite:///./golf_modeling_suite.db

# =============================================================================
# SECURITY CONFIGURATION (REQUIRED for Production)
# =============================================================================

# JWT Secret Key - REQUIRED for authentication
# Generate with: python3 -c "import secrets; print(secrets.token_urlsafe(64))"
# GOLF_API_SECRET_KEY=your-secret-key-here
SECRET_KEY=your-secret-key-minimum-32-characters

# Admin user password - set this before first startup
# If not set, a random password will be generated (check logs)
# GOLF_ADMIN_PASSWORD=secure-admin-password

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Host to bind the API server to
# Use 0.0.0.0 to allow external connections, 127.0.0.1 for localhost only
API_HOST=0.0.0.0

# Port for the API server
API_PORT=8000

# Environment mode: development, staging, production
# production mode enforces stricter security checks
ENVIRONMENT=development

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Enable debug mode (additional logging, disable in production)
DEBUG=false

# Maximum upload size for video analysis (in MB)
MAX_UPLOAD_SIZE_MB=10

# Rate limiting configuration
RATE_LIMIT_GLOBAL=100/minute
RATE_LIMIT_LOGIN=5/minute
RATE_LIMIT_REGISTER=3/hour
