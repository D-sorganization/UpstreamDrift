# Golf Modeling Suite - Environment Variables Example
# Copy this file to .env and fill in the values

# API Configuration
API_PORT=8000
API_HOST=0.0.0.0
ALLOWED_HOSTS=localhost,127.0.0.1
DEBUG=False

# Security
# Set a strong password for the initial admin user
GOLF_ADMIN_PASSWORD=change_me_in_production
# Secret key for JWT token signing
GOLF_API_SECRET_KEY=generate_a_random_string_here
# API Key for internal service communication
X_API_KEY=generate_another_random_string_here

# Database
# Default: sqlite:///./golf_modeling_suite.db
DATABASE_URL=sqlite:///./golf_modeling_suite.db

# File Storage
# Maximum upload size in bytes (default 10MB)
MAX_UPLOAD_SIZE_BYTES=10485760

# AI Provider Configuration (Optional)
# OpenAI
# OPENAI_API_KEY=your_key_here
# OPENAI_MODEL=gpt-4-turbo-preview
# OPENAI_TIMEOUT=60.0
# OPENAI_ORGANIZATION=your_org_id_here

# Anthropic
# ANTHROPIC_API_KEY=your_key_here
# ANTHROPIC_MODEL=claude-3-sonnet-20240229
# ANTHROPIC_TIMEOUT=60.0

# Google Gemini
# GEMINI_API_KEY=your_key_here
# GEMINI_MODEL=gemini-pro

# Ollama (Local AI - No API key needed)
# OLLAMA_HOST=http://localhost:11434
# OLLAMA_MODEL=llama3.1:8b
# OLLAMA_TIMEOUT=120.0
